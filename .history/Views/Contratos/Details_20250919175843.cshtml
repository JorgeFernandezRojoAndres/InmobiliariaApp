@model InmobiliariaApp.Models.Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<h2 class="mb-4">üìë Detalles del Contrato</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Contrato #@Model.Id</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Inquilino</dt>
            <dd class="col-sm-9">
                @(Model.Inquilino != null 
                    ? $"{Model.Inquilino.Nombre} {Model.Inquilino.Apellido} - DNI {Model.Inquilino.Documento}" 
                    : "‚ùå No disponible")
            </dd>

            <dt class="col-sm-3">Inmueble</dt>
            <dd class="col-sm-9">
                @(Model.Inmueble != null 
                    ? $"{Model.Inmueble.Direccion} - {Model.Inmueble.Tipo} (${Model.Inmueble.Precio})" 
                    : "‚ùå No disponible")
            </dd>

            <dt class="col-sm-3">Fecha de Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToShortDateString()</dd>

            <dt class="col-sm-3">Fecha de Fin</dt>
            <dd class="col-sm-9">@Model.FechaFin.ToShortDateString()</dd>

            <dt class="col-sm-3">Monto Mensual</dt>
            <dd class="col-sm-9">@Model.MontoMensual.ToString("C")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.Estado) ? Model.Estado : "Sin estado")</dd>
        </dl>

        <!-- üîπ Secci√≥n de Auditor√≠a (solo para Administradores) -->
        @if (User.IsInRole("Administrador"))
        {
            <hr />
            <h5>üõ°Ô∏è Auditor√≠a</h5>
            <dl class="row">
                <dt class="col-sm-3">Creado por</dt>
                <dd class="col-sm-9">
                    @if (Model.UsuarioCreador != null)
                    {
                        @($"{Model.UsuarioCreador.Nombre} {Model.UsuarioCreador.Apellido}")
                    }
                    else if (Model.CreadoPor > 0)
                    {
                        <span class="text-muted">Usuario ID @Model.CreadoPor</span>
                    }
                    else
                    {
                        <span class="text-muted">No registrado</span>
                    }
                </dd>

                @if (Model.TerminadoPor.HasValue)
                {
                    <dt class="col-sm-3">Terminado por</dt>
                    <dd class="col-sm-9">
                        @if (Model.UsuarioTerminador != null)
                        {
                            @($"{Model.UsuarioTerminador.Nombre} {Model.UsuarioTerminador.Apellido}")
                        }
                        else
                        {
                            <span class="text-muted">Usuario ID @Model.TerminadoPor</span>
                        }
                    </dd>
                }
                else if (Model.Estado == "Vencido")
                {
                    <dt class="col-sm-3">Terminado por</dt>
                    <dd class="col-sm-9 text-muted">Finalizado autom√°ticamente por vencimiento</dd>
                }
            </dl>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">‚úèÔ∏è Editar</a>
    <a asp-action="Index" class="btn btn-secondary">‚¨ÖÔ∏è Volver al listado</a>
</div>
