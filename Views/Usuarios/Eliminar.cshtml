@model InmobiliariaApp.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<h4>¿Estás seguro de que querés eliminar este usuario?</h4>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@Model.Rol</dd>
        </dl>
    </div>
</div>

<form asp-action="EliminarConfirmado" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">🗑️ Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
