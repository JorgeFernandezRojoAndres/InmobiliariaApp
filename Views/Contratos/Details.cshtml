@model InmobiliariaApp.Models.ViewModels.ContratoDetallesViewModel

@{
    ViewData["Title"] = "Detalles del Contrato";
    var contrato = Model.Contrato;
}

<h2 class="mb-4">üìë Detalles del Contrato</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Contrato #@contrato.Id</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Inquilino</dt>
            <dd class="col-sm-9">
                @(contrato.Inquilino != null
                                ? $"{contrato.Inquilino.Nombre} {contrato.Inquilino.Apellido} - DNI {contrato.Inquilino.Documento}"
                                : "‚ùå No disponible")
            </dd>

            <dt class="col-sm-3">Inmueble</dt>
            <dd class="col-sm-9">
                @(contrato.Inmueble != null
                                ? $"{contrato.Inmueble.Direccion} - {contrato.Inmueble.Tipo} (${contrato.Inmueble.Precio})"
                                : "‚ùå No disponible")
            </dd>

            <dt class="col-sm-3">Fecha de Inicio</dt>
            <dd class="col-sm-9">@contrato.FechaInicio.ToShortDateString()</dd>

            <dt class="col-sm-3">Fecha de Fin</dt>
            <dd class="col-sm-9">@contrato.FechaFin.ToShortDateString()</dd>

            <dt class="col-sm-3">Monto Mensual</dt>
            <dd class="col-sm-9">@contrato.MontoMensual.ToString("C")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@(!string.IsNullOrEmpty(contrato.Estado) ? contrato.Estado : "Sin estado")</dd>
        </dl>

        <!-- üîπ Secci√≥n de Auditor√≠a (solo para Administradores) -->
        @if (User.IsInRole("Administrador"))
        {
            <hr />
            <h5>üõ°Ô∏è Auditor√≠a</h5>
            <dl class="row">
                <dt class="col-sm-3">Creado por</dt>
                <dd class="col-sm-9">
                    @if (contrato.UsuarioCreador != null)
                    {
                        @($"{contrato.UsuarioCreador.Nombre} {contrato.UsuarioCreador.Apellido}")
                    }
                    else if (contrato.CreadoPor > 0)
                    {
                        <span class="text-muted">Usuario ID @contrato.CreadoPor</span>
                    }
                    else
                    {
                        <span class="text-muted">No registrado</span>
                    }
                </dd>

                @if (contrato.TerminadoPor.HasValue)
                {
                    <dt class="col-sm-3">Terminado por</dt>
                    <dd class="col-sm-9">
                        @if (contrato.UsuarioTerminador != null)
                        {
                            @($"{contrato.UsuarioTerminador.Nombre} {contrato.UsuarioTerminador.Apellido}")
                        }
                        else
                        {
                            <span class="text-muted">Usuario ID @contrato.TerminadoPor</span>
                        }
                    </dd>
                }
                else if (contrato.Estado == "Vencido")
                {
                    <dt class="col-sm-3">Terminado por</dt>
                    <dd class="col-sm-9 text-muted">Finalizado autom√°ticamente por vencimiento</dd>
                }
            </dl>
        }
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <h5 class="card-title">üí∞ Pagos registrados</h5>
        <hr />

        @if (Model.Pagos != null && Model.Pagos.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Fecha</th>
                            <th>Detalle</th>
                            <th class="text-end">Importe</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pago in Model.Pagos)
                        {
                            <tr>
                                <td>@pago.Id</td>
                                <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                <td>@(string.IsNullOrWhiteSpace(pago.Detalle) ? "-" : pago.Detalle)</td>
                                <td class="text-end">@pago.Importe.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">No hay pagos registrados para este contrato.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@contrato.Id" class="btn btn-warning">‚úèÔ∏è Editar</a>
    <a asp-action="Index" class="btn btn-secondary">‚¨ÖÔ∏è Volver al listado</a>
</div>