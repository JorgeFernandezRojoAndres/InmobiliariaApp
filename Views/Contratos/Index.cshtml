@model IEnumerable<InmobiliariaApp.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<h2 class="mb-4">üìë Contratos</h2>

<p>
    <a class="btn btn-success" asp-action="Create">‚ûï Nuevo Contrato</a>
</p>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Monto</th>
            <th>Estado</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                    @(c.Inquilino != null 
                        ? $"{c.Inquilino.Nombre} {c.Inquilino.Apellido} - DNI {c.Inquilino.Documento}" 
                        : "‚ùå No disponible")
                </td>
                <td>
                    @(c.Inmueble != null 
                        ? $"{c.Inmueble.Direccion} - {c.Inmueble.Tipo} (${c.Inmueble.Precio})" 
                        : "‚ùå No disponible")
                </td>
                <td>@c.FechaInicio.ToShortDateString()</td>
                <td>@c.FechaFin.ToShortDateString()</td>
                <td>@c.MontoMensual.ToString("C")</td>
                <td>
                    @if (c.FechaFin < DateTime.Now)
                    {
                        <span class="badge bg-secondary">Vencido</span>
                    }
                    else
                    {
                        <span class="badge bg-success">
                            @(!string.IsNullOrEmpty(c.Estado) ? c.Estado : "Sin estado")
                        </span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@c.Id">üëÅÔ∏è Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@c.Id">‚úèÔ∏è Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@c.Id">üóëÔ∏è Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
