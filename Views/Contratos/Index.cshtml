@model IEnumerable<InmobiliariaApp.Models.Contrato>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Contratos";
}

<h2 class="mb-4">üìë Contratos</h2>

<p>
    <a class="btn btn-success" asp-action="Create">‚ûï Nuevo Contrato</a>
</p>

<!-- üîπ Mostrar errores de validaci√≥n -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<!-- üîπ Formulario de filtros -->
<form asp-action="Index" method="get" class="row g-3 mb-4">

    <!-- ‚úÖ Filtro por propietario (solo si hay lista disponible) -->
    @if (ViewBag.Propietarios != null)
    {
        <div class="col-md-3">
            <label for="propietarioId" class="form-label">Propietario</label>
            <select id="propietarioId" name="propietarioId" class="form-select">
                <option value="">Todos</option>
                @foreach (var p in ViewBag.Propietarios)
                {
                    var seleccionado = (ViewBag.PropietarioSeleccionado != null &&
                                        (int)ViewBag.PropietarioSeleccionado == p.Id);
                    <option value="@p.Id" selected="@(seleccionado)">
                        @p.Nombre @p.Apellido
                    </option>
                }
            </select>
        </div>
    }

    <div class="col-md-3">
        <label for="inicio" class="form-label">Fecha inicio</label>
        <input type="date"
               id="inicio"
               name="inicio"
               class="form-control"
               value="@Context.Request.Query["inicio"]" />
    </div>

    <div class="col-md-3">
        <label for="fin" class="form-label">Fecha fin</label>
        <input type="date"
               id="fin"
               name="fin"
               class="form-control"
               value="@Context.Request.Query["fin"]" />
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Mostrar Todos</a>
    </div>
</form>

<!-- üîπ Tabla de resultados -->
<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Monto</th>
            <th>Estado</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                    @(c.Inquilino != null
                        ? $"{c.Inquilino.Nombre} {c.Inquilino.Apellido} - DNI {c.Inquilino.Documento}"
                        : "‚ùå No disponible")
                </td>
                <td>
                    @(c.Inmueble != null
                        ? $"{c.Inmueble.Direccion} - {c.Inmueble.TipoNombre} (${c.Inmueble.Precio})"
                        : "‚ùå No disponible")
                </td>
                <td>@c.FechaInicio.ToShortDateString()</td>
                <td>@c.FechaFin.ToShortDateString()</td>
                <td>@c.MontoMensual.ToString("C")</td>
                <td>
                    @switch (c.Estado)
                    {
                        case "Vigente":
                            <span class="badge bg-success">Vigente</span>
                            break;
                        case "Finalizado":
                            <span class="badge bg-warning text-dark">Finalizado</span>
                            break;
                        case "Vencido":
                            <span class="badge bg-secondary">Vencido</span>
                            break;
                        case "Rescindido":
                            <span class="badge bg-danger">Rescindido</span>
                            break;
                        default:
                            <span class="badge bg-light text-dark">Sin estado</span>
                            break;
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@c.Id">üëÅÔ∏è Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@c.Id">‚úèÔ∏è Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@c.Id">üóëÔ∏è Eliminar</a>
                    <a class="btn btn-success btn-sm" asp-action="Renovar" asp-route-id="@c.Id">üîÑ Renovar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
