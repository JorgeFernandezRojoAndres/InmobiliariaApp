@model InmobiliariaApp.Models.Contrato

@{
    ViewData["Title"] = "Nuevo Contrato";
}

<h2 class="mb-4">‚ûï Nuevo Contrato</h2>

<!-- üîπ Mostrar errores globales (ej: contrato duplicado) -->
<div asp-validation-summary="All" class="alert alert-danger"></div>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="IdInquilino" class="form-label">Inquilino</label>
        <select asp-for="IdInquilino" class="form-control" asp-items="ViewBag.Inquilinos" required>
            <option value="" disabled selected>-- Seleccione un inquilino --</option>
        </select>
        <span asp-validation-for="IdInquilino" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdInmueble" class="form-label">Inmueble</label>
        <select asp-for="IdInmueble" class="form-control" asp-items="ViewBag.Inmuebles" required>
            <option value="" disabled selected>-- Seleccione un inmueble --</option>
        </select>
        <span asp-validation-for="IdInmueble" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
        <input asp-for="FechaInicio" class="form-control" type="date" required />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaFin" class="form-label">Fecha de Fin</label>
        <input asp-for="FechaFin" class="form-control" type="date" required />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MontoMensual" class="form-label">Monto Mensual</label>
        <input asp-for="MontoMensual" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="MontoMensual" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label">Estado</label>
        <input asp-for="Estado" class="form-control" value="Vigente"readonly />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">‚úÖ Crear Contrato</button>
    <a asp-action="Index" class="btn btn-secondary">‚¨ÖÔ∏è Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
