@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InmobiliariaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InmobiliariaApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">InmobiliariaApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Menú izquierdo -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                        </li>

                        <!-- 🔹 Dropdown Personas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="personasDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Personas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="personasDropdown">
                                <li><a class="dropdown-item" asp-controller="Inquilinos"
                                        asp-action="Index">Inquilinos</a></li>
                                <li><a class="dropdown-item" asp-controller="Propietarios"
                                        asp-action="Index">Propietarios</a></li>
                                <li><a class="dropdown-item" asp-controller="Personas" asp-action="Index">Todas</a></li>
                            </ul>
                        </li>


                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                            </li>
                        }
                    </ul>

                    <!-- Bloque derecho: autenticación -->
                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <img src="@(User.FindFirst("AvatarUrl")?.Value ?? "/avatars/default.png")" alt="Avatar"
                                    class="rounded-circle me-2" style="width:32px;height:32px;object-fit:cover;" />

                                <span class="navbar-text me-3 d-none d-md-inline">
                                    @User.FindFirst("FullName")?.Value (@User.FindFirst(ClaimTypes.Role)?.Value)
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Cerrar sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - InmobiliariaApp -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
