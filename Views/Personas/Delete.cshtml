@model InmobiliariaApp.Models.Persona

<h2>Eliminar Persona</h2>

<div class="alert alert-warning">
    <h4>¿Estás seguro que querés eliminar esta persona?</h4>
    <p class="mb-0">Esta acción no se puede deshacer.</p>
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Nombre @Model.Apellido</h5>
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>DNI:</strong> @Model.Documento</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
